{
  "extends": [
    "config:base",
    ":noUnscheduledUpdates",
    ":semanticCommits"
  ],
  "rebaseStalePrs": true,
  "schedule": [
    "every weekend"
  ],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "matchPackagePatterns": ["@edx"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeSchedule": ["at any time"]
    }
  ]
}
